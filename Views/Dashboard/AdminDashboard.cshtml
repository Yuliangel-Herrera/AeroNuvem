﻿@{
    ViewData["Title"] = "Painel Administrativo";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8" data-aos="fade-right">
                <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill mb-3"
                     style="background: linear-gradient(135deg, var(--accent3), var(--accent2)); color: white;">
                    <i class="fas fa-cogs me-2"></i>
                    <span class="fw-semibold">Administração</span>
                </div>
                <h1 class="page-header mb-3">Painel do Administrador</h1>
                <p class="lead text-muted mb-4">Gerencie e monitore todos os recursos do sistema Aéreo Nuvem</p>
            </div>
            <div class="col-lg-4 text-center" data-aos="fade-left" data-aos-delay="200">
                <div class="floating">
                    <i class="fas fa-user-shield" style="font-size: 8rem; color: var(--accent2); opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="0">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-plane"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--primary);">150+</h3>
                    <p class="text-muted mb-0">Voos Ativos</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--accent2);">2.5K</h3>
                    <p class="text-muted mb-0">Usuários</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--secondary);">890</h3>
                    <p class="text-muted mb-0">Reservas Hoje</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--primary);">Ativo</h3>
                    <p class="text-muted mb-0">Sistema Online</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <!-- Cards de Gerenciamento -->
        <div class="row g-4 justify-content-center">

            <!-- Card: Voos -->
            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="0">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3 mx-auto" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                            <i class="fas fa-plane-engines text-white"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Voos</h5>
                        <p class="card-text text-muted small mb-4">Gerencie voos disponíveis, escalas e horários.</p>
                        <a href="@Url.Action("Index", "Flight")" class="btn btn-primary-custom w-100 fw-semibold">
                            <i class="fas fa-cog me-2"></i>Gerenciar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card: Aeronaves -->
            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3 mx-auto" style="background: linear-gradient(135deg, var(--accent2), var(--accent3));">
                            <i class="fas fa-plane text-white"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Aeronaves</h5>
                        <p class="card-text text-muted small mb-4">Visualize, cadastre e atualize informações das aeronaves.</p>
                        <a href="@Url.Action("Index", "Airplane")" class="btn btn-secondary-custom w-100 fw-semibold">
                            <i class="fas fa-cog me-2"></i>Gerenciar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card: Usuarios -->
            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3 mx-auto" style="background: linear-gradient(135deg, #28a745, #20c997);">
                            <i class="fas fa-users text-white"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Usuários</h5>
                        <p class="card-text text-muted small mb-4">Gerencie perfis, status e informações dos clientes.</p>
                        <a href="@Url.Action("Index", "Client")" class="btn w-100 fw-semibold"
                           style="background: linear-gradient(135deg, #28a745, #20c997); color: white; border: none;">
                            <i class="fas fa-cog me-2"></i>Gerenciar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card: Reservas -->
            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="300">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3 mx-auto" style="background: linear-gradient(135deg, #ffc107, #fd7e14);">
                            <i class="fas fa-calendar-check text-white"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Reservas</h5>
                        <p class="card-text text-muted small mb-4">Acompanhe e gerencie todas as reservas feitas.</p>
                        <a href="@Url.Action("SearchByFlight", "Reservation")" class="btn w-100 fw-semibold"
                           style="background: linear-gradient(135deg, #ffc107, #fd7e14); color: white; border: none;">
                            <i class="fas fa-cog me-2"></i>Gerenciar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card: Aeroportos -->
            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="400">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3 mx-auto" style="background: linear-gradient(135deg, #dc3545, #e83e8c);">
                            <i class="fas fa-building text-white"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Aeroportos</h5>
                        <p class="card-text text-muted small mb-4">Cadastre e atualize informações dos aeroportos.</p>
                        <a href="@Url.Action("Index", "Airport")" class="btn w-100 fw-semibold"
                           style="background: linear-gradient(135deg, #dc3545, #e83e8c); color: white; border: none;">
                            <i class="fas fa-cog me-2"></i>Gerenciar
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Estilos extras -->
<style>
    .card-hover {
        transition: all 0.3s ease-in-out;
    }

        .card-hover:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 50px rgba(13, 18, 28, 0.15);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
    }
</style>