@{
    ViewData["Title"] = "Painel do Cliente";
}

<div class="container py-5">
    <h2 class="mb-4 text-center">Bem-vindo ao seu painel!</h2>

    <div class="row g-4 justify-content-center">

        <!-- Card de Reservas -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Minhas Reservas</h5>
                    <p class="card-text">Veja e gerencie suas reservas de voos.</p>
                    <a href="@Url.Action("Index", "Reservation")" class="btn btn-primary w-100">Acessar</a>
                </div>
            </div>
        </div>

        <!-- Card de Promoções -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-tag-fill display-4 text-success mb-3"></i>
                    <h5 class="card-title">Promoções</h5>
                    <p class="card-text">Confira as ofertas e descontos especiais.</p>
                    <a href="@Url.Action("Promocoes", "ClientDashboard")" class="btn btn-success w-100">Ver Ofertas</a>
                </div>
            </div>
        </div>

        <!-- Card de Seja Premium -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill display-4 text-warning mb-3"></i>
                    <h5 class="card-title">Seja Premium</h5>
                    <p class="card-text">Aproveite benefícios exclusivos e upgrades.</p>
                    <a href="@Url.Action("SejaPremium", "ClientDashboard")" class="btn btn-warning text-white w-100">Torne-se Premium</a>
                </div>
            </div>
        </div>
    </div>
</div>
