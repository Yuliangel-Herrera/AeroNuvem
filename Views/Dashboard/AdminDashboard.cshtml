@{
    ViewData["Title"] = "Painel Administrativo";
}

<section class="py-5 bg-light min-vh-100">
    <div class="container">
        <!-- Título -->
        <div class="text-center mb-5" data-aos="fade-up">
            <h1 class="fw-bold text-primary mb-3">
                <i class="bi bi-speedometer2 me-2"></i> Painel do Administrador
            </h1>
            <p class="text-muted fs-5">
                Gerencie e monitore todos os recursos do sistema Aéreo Nuvem.
            </p>
        </div>

        <!-- Cards -->
        <div class="row g-4 justify-content-center">

            <!-- Card: Voos -->
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="icon-circle bg-primary bg-opacity-10 text-primary mb-3 mx-auto">
                            <i class="bi bi-airplane-engines fs-1"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Voos</h5>
                        <p class="card-text text-muted small mb-4">Gerencie voos disponíveis, escalas e horários.</p>
                        <a href="@Url.Action("Index", "Flight")" class="btn btn-primary w-100 fw-semibold">
                            Gerenciar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card: Aeronaves -->
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="icon-circle bg-info bg-opacity-10 text-info mb-3 mx-auto">
                            <i class="bi bi-airplane fs-1"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Aeronaves</h5>
                        <p class="card-text text-muted small mb-4">Visualize, cadastre e atualize informações das aeronaves.</p>
                        <a href="@Url.Action("Index", "Airplane")" class="btn btn-info text-white w-100 fw-semibold">
                            Gerenciar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card: Usuarios -->
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="icon-circle bg-success bg-opacity-10 text-success mb-3 mx-auto">
                            <i class="bi bi-people-fill fs-1"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Usuarios</h5>
                        <p class="card-text text-muted small mb-4">Gerencie perfis, status e informações dos clientes.</p>
                        <a href="@Url.Action("Index", "Client")" class="btn btn-success w-100 fw-semibold">
                            Gerenciar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card: Reservas -->
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="icon-circle bg-warning bg-opacity-10 text-warning mb-3 mx-auto">
                            <i class="bi bi-calendar-check fs-1"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Reservas</h5>
                        <p class="card-text text-muted small mb-4">Acompanhe e gerencie todas as reservas feitas.</p>
                        <a href="@Url.Action("SearchByFlight", "Reservation")" class="btn btn-warning text-white w-100 fw-semibold">
                            Gerenciar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card: Aeroportos -->
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body text-center p-4">
                        <div class="icon-circle bg-danger bg-opacity-10 text-danger mb-3 mx-auto">
                            <i class="bi bi-building fs-1"></i>
                        </div>
                        <h5 class="card-title fw-semibold mb-2">Aeroportos</h5>
                        <p class="card-text text-muted small mb-4">Cadastre e atualize informações dos aeroportos.</p>
                        <a href="@Url.Action("Index", "Airport")" class="btn btn-danger w-100 fw-semibold">
                            Gerenciar
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Estilos extras -->
<style>
    .card-hover {
        transition: all 0.3s ease-in-out;
    }

        .card-hover:hover {
            transform: translateY(-6px);
            box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,0.1);
        }

    .icon-circle {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, var(--accent2), var(--accent3));
        border: none;
        color: #fff;
    }
</style>
